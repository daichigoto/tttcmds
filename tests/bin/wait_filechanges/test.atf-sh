atf_test_case basic
basic_head() {
	atf_set "descr" "Verify a basic wait process"
}

basic_body() {
	atf_check -s ignore \
		-o empty \
		-x "touch $(atf_get_srcdir)/mon;" \
		   "(sleep 0.1 && touch $(atf_get_srcdir)/mon) &" \
		   "wait_filechanges $(atf_get_srcdir)/mon;" \
		   "sleep 0.1; rm $(atf_get_srcdir)/mon"
}

atf_test_case recursive
recursive_head() {
	atf_set "descr" "Verify a recursive wait process"
}

recursive_body() {
	atf_check -s ignore \
		-o empty \
		-x "(sleep 0.1 && touch $(atf_get_srcdir)/recursive.in/dir2/dir2/file2) &" \
		   "wait_filechanges $(atf_get_srcdir)/recursive.in;" \
		   "sleep 0.1; rm $(atf_get_srcdir)/recursive.in/dir2/dir2/file2"
}

atf_init_test_cases()
{
	atf_add_test_case basic
	atf_add_test_case recursive
}
