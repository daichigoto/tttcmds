atf_test_case csv2ssv
csv2ssv_head() {
	atf_set "descr" "Verify a csv2ssv process"
}

csv2ssv_body() {
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/data.ssv \
		-x "conv_csv2ssv" \
		   "$(atf_get_srcdir)/data.csv"
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/data.ssv \
		-x "cat $(atf_get_srcdir)/data.csv |" \
		   "conv_csv2ssv"
}

atf_test_case empty
empty_head() {
	atf_set "descr" "Verify an empty file process"
}

empty_body() {
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/empty.ssv \
		-x "conv_csv2ssv" \
		   "$(atf_get_srcdir)/empty.csv"
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/empty.ssv \
		-x "cat $(atf_get_srcdir)/empty.csv |" \
		   "conv_csv2ssv"
}

atf_init_test_cases()
{
	atf_add_test_case csv2ssv
	atf_add_test_case empty
}
