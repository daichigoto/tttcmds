atf_test_case empty
empty_head() {
	atf_set "descr" "Verify an empty SSV string process"
}

empty_body() {
	atf_check -o inline:"\n" conv_ssvstr2str ''
}

atf_test_case atmark
atmark_head() {
	atf_set "descr" "Verify an atmark SSV string process"
}

atmark_body() {
	atf_check -o inline:"\n" conv_ssvstr2str '@'
	atf_check -o inline:"@\n" conv_ssvstr2str '\@'
	atf_check -o inline:"@@\n" conv_ssvstr2str '\@\@'
	atf_check -o inline:"\\\@\n" conv_ssvstr2str '\\@'
}

atf_test_case underbar
underbar_head() {
	atf_set "descr" "Verify an underbar string process"
}

underbar_body() {
	atf_check -o inline:" \n" conv_ssvstr2str '_'
	atf_check -o inline:"   \n" conv_ssvstr2str '___'
}

atf_test_case string
string_head() {
	atf_set "descr" "Verify a string process"
}

string_body() {
	atf_check -o inline:" _ @ _\n" conv_ssvstr2str '_\__\@_\_'
}

atf_init_test_cases()
{
	atf_add_test_case empty
	atf_add_test_case atmark
	atf_add_test_case underbar
	atf_add_test_case string
}
