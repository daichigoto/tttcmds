atf_test_case val1txt
val1txt_head() {
	atf_set "descr" "Verify a value embedding process"
}

val1txt_body() {
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/val1txt_1.out \
		-x "embed_value1txt" \
		   "1.THIS.this 2.IS.is 3.AND.and 4.THE.the" \
		   "$(atf_get_srcdir)/val1txt.in"
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/val1txt_1.out \
		-x "cat $(atf_get_srcdir)/val1txt.in |" \
		   "embed_value1txt" \
		   "1.THIS.this 2.IS.is 3.AND.and 4.THE.the"
}

atf_init_test_cases()
{
	atf_add_test_case val1txt
}
