atf_test_case empty
empty_head() {
	atf_set "descr" "Verify an empty file"
}

empty_body() {
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/empty_1.out \
		-x "retu_select 1 $(atf_get_srcdir)/empty.in"
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/empty_1.out \
		-x "retu_select 1 < $(atf_get_srcdir)/empty.in"
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/empty_1.out \
		-x "cat $(atf_get_srcdir)/empty.in |" \
		   "retu_select 1"
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/empty_1.out \
		-x "cat $(atf_get_srcdir)/empty.in |" \
		   "retu_select 1 -"
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/empty_2.out \
		-x "retu_select 1" \
		   "$(atf_get_srcdir)/empty.in" \
		   "$(atf_get_srcdir)/empty.in" \
		   "$(atf_get_srcdir)/empty.in"
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/empty_3.out \
		-x "retu_select 1/10 $(atf_get_srcdir)/empty.in"
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/empty_4.out \
		-x "retu_select 10/1 $(atf_get_srcdir)/empty.in"
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/empty_5.out \
		-x "retu_select 5 1 3 " \
		   "$(atf_get_srcdir)/empty.in" \
		   "$(atf_get_srcdir)/empty.in"
	atf_check -s ignore \
		-o file:$(atf_get_srcdir)/empty_6.out \
		-x "retu_select 5 1 3 " \
		   "$(atf_get_srcdir)/empty.in" \
		   "$(atf_get_srcdir)/empty.in" \
		   "$(atf_get_srcdir)/data_without_eor.in" \
		   "$(atf_get_srcdir)/empty.in"
}

